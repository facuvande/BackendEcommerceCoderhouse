<div>
    {{> header firstName=firstName isAdmin=isAdmin lastName=lastName profileImg=profileImg}}
    {{> title}}
    <div class="container">
        <section class="form">
            <article class="dnone .article" id="article">
                <h2 class="title">Agregar producto</h2>
                <form action="" class="crud-form" id="crud-form">
                    <label for="title">Titulo del producto:</label><br>
                    <input type="text" name="title" id="title" placeholder="Titulo"> 
                    <br>
                    <label for="description">Descripcion del producto:</label><br>
                    <input type="text" name="description" id="description" placeholder="Descripcion"> 
                    <br>
                    <label for="price">Precio del producto:</label><br>
                    <input type="text" name="price" id="price" placeholder="Precio"> 
                    <br>
                    <label for="stock">Stock del producto:</label><br>
                    <input type="text" name="stock" id="stock" placeholder="Stock"> 
                    <br>
                    <label for="category">Categoria del producto:</label><br>
                    <input type="text" name="category" id="category" placeholder="Categoria"> 
                    <br>
                    <label for="code">Codigo del producto:</label><br>
                    <input type="text" name="code" id="code" placeholder="Code"> 
                    <br>
                    <label for="file">Imagen del producto:</label><br>
                    <input id="file" type="file" name="file" placeholder="Foto"/>
                    <br>
                <input type="submit" value="Guardar Producto">
            </form>
                <p id="producto-id"></p>
            </article>
        </section>
        <table class="table">
            <caption>Listado de productos</caption>
            <button class="add-btn" id="add-btn">Agregar Producto</button>
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Producto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoria</th>
                    <th>Code</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody id="tbody">
                
            </tbody>
        </table>
    </div>
    {{> footer}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>